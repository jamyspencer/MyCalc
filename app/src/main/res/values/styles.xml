<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/CalcScreen</item>
        <item name="android:buttonStyle" >@style/AllNumButtons</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AllNumButtons" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CalcScreen" parent="android:Widget.TextView">
        <item name="android:textSize">36sp</item>
        <item name="android:background">@color/screenBackground</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">bottom|right</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
